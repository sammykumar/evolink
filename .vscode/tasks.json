{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Evolink",
      "type": "shell",
      "command": "cd evolink && docker build --build-arg BUILD_FROM=\"ghcr.io/home-assistant/aarch64-base:latest\" -t local/evolink-addon .",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "clear": true
      }
    },
    {
      "label": "Run Evolink",
      "type": "shell",
      "command": "docker run --rm -v /tmp/my_test_data:/data local/evolink-addon",
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "clear": true
      }
    }
  ]
}
